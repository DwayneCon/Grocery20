# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=grocery_planner
DB_USER=root
DB_PASSWORD=your_password
DB_CONNECTION_LIMIT=10

# JWT Configuration
JWT_SECRET=your-64-character-random-secret-key-here-change-this-in-production
JWT_REFRESH_SECRET=your-different-64-character-refresh-secret-key-here-change-this
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-here-change-this-in-production

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_FALLBACK_MODEL=gpt-3.5-turbo

# Store APIs (Optional)
KROGER_CLIENT_ID=your-kroger-client-id
KROGER_CLIENT_SECRET=your-kroger-client-secret
WALMART_API_KEY=your-walmart-api-key

# Email Service (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis (Optional)
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn

# Security
ENCRYPTION_KEY=your-32-byte-encryption-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
